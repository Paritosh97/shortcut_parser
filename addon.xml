<addon id="plugin.program.shortcutparser"
       name="Shortcut Parser"
       version="1.0.0"
       provider-name="Paritosh Sharma">
    
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <!-- Program Add-on -->
    <extension point="xbmc.python.script" library="addon.py" />

    <!-- Metadata -->
    <extension point="xbmc.addon.metadata">
        <summary>Shortcut Parser and Launcher</summary>
        <description>Scans a folder for .lnk and .desktop files and adds them in Kodi.</description>
        <platform>all</platform>
    </extension>
</addon>
