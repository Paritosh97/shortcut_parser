<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.shortcutparser"
       name="Shortcut Parser"
       version="1.0.0"
       provider-name="Your Name"
       type="xbmc.python.script">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service"
               library="service.py"
               start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary>Background shortcut parser</summary>
        <description>This add-on monitors shortcuts and allows launching them from Kodi.</description>
        <platform>all</platform>
    </extension>
</addon>
